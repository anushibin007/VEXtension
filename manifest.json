{
  "name": "VE Xtension",
  "description": "A browser extension that enhances the OpenText ValueEdge.",
  "version": "1.0.0",
  "manifest_version": 3,
  "permissions": [
    "webNavigation",
    "activeTab",
    "scripting",
    "contextMenus",
    "tabs",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["https://ot-internal.saas.microfocus.com/*"],
      "js": ["./Scripts/content.js"],
      "css": ["./Styles/content.css"]
    }
  ],
  "action": {
    "default_popup": "./Views/popup.html",
    "default_title": "VE Xtension"
  },
  "background": {
    "service_worker": "./Scripts/background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "Icons/fact_check_16.png",
        "Icons/fact_check_32.png",
        "Icons/fact_check_48.png",
        "Icons/fact_check_128.png",
        "Icons/fact_check_48_FFFFFF.png"
      ],
      "matches": ["https://ot-internal.saas.microfocus.com/*"]
    }
  ],
  "icons": {
    "16": "Icons/fact_check_16.png",
    "32": "Icons/fact_check_32.png",
    "48": "Icons/fact_check_48.png",
    "128": "Icons/fact_check_128.png"
  },
  "options_ui": {
    "page": "./Views/options.html",
    "open_in_tab": true
  }
}
