{
  "name": "VE Xtension",
  "description": "A browser extension that enhances the OpenText ValueEdge platform with additional features for teams.",
  "version": "1.0.0",
  "manifest_version": 3,
  "permissions": [
    "webNavigation",
    "activeTab",
    "scripting",
    "contextMenus",
    "tabs",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["https://ot-internal.saas.microfocus.com/*"],
      "js": [
        "./Scripts/content.js",
        "./Scripts/utility.js"
      ],
      "css": ["./Styles/content.css"]
    }
  ],
  "action": {
    "default_popup": "main.html",
    "default_title": "A VE Xtension"
  },
  "background": {
    "service_worker": "./Scripts/background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": ["definitions.json","alert-sound.mp3"],
      "matches": ["https://*/*"]
    }
  ],
  "icons": {
    "16": "Icons/fact_check_16.png",
    "32": "Icons/fact_check_32.png",
    "48": "Icons/fact_check_48.png",
    "128": "Icons/fact_check_128.png"
  }
}
